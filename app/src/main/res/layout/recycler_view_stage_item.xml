<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_ordinal_stage_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="8pt"
            android:textColor="@color/colorDarkText"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_stage_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stage name"
            android:textSize="8pt"
            android:textColor="@color/colorDarkText"
            android:layout_toRightOf="@id/tv_ordinal_stage_number"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/btn_delete_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_button"
            android:background="@color/colorButtonDelete"
            android:textColor="@color/colorWhiteText"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>

