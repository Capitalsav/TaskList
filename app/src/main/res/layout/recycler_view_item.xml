<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkbox_id"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:button="@drawable/checkbox_background"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"/>
        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circle_progress_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cpb_background_progressbar_color="@color/colorEmptyCircleProgressBar"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progressbar_color="@color/colorCircleProgressBar"
            app:cpb_progressbar_width="5dp"
            android:layout_toRightOf="@+id/checkbox_id"/>
        <TextView
            android:id="@+id/tv_title_of_recycler_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorDarkText"
            android:layout_toEndOf="@id/circle_progress_id"
            android:maxLines="1"
            android:ellipsize="end"/>
        <ProgressBar
            android:id="@+id/horizontal_progress_id"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginRight="8dp"
            style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
            android:indeterminate="false"
            android:layout_toEndOf="@id/circle_progress_id"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>